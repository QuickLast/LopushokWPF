<Window x:Class="LopushokApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LopushokApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Лопушок" Height="750" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Image Grid.Row="0" Source="/Image/Лопушок.png" Width="40" HorizontalAlignment="Left" Margin="40 0"></Image>
        <TextBlock Grid.Row="0" FontSize="28" VerticalAlignment="Center" FontFamily="Gabriola" Foreground="#00CC76" HorizontalAlignment="Left" Margin="100,0" >Лопушок</TextBlock>
        <Frame NavigationUIVisibility="Hidden" x:Name="BodyFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
