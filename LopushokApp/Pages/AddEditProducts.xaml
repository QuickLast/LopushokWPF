<Page x:Class="LopushokApp.Pages.AddEditProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LopushokApp.Pages"
      mc:Ignorable="d" 
      Title="AddEditProducts">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10" VerticalAlignment="Top">
            <WrapPanel Margin="0,5">
                <TextBlock Text="Артикул:" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
                <TextBox Name="artTB" Text="{Binding Articul}" Width="200" Padding="5"/>
            </WrapPanel>
            <WrapPanel Margin="0,5">
                <TextBlock Text="Наименование:" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
                <TextBox Name="nameTB" Text="{Binding Name}" Width="200" Padding="5"/>
            </WrapPanel>
            <WrapPanel Margin="0,5">
                <TextBlock Text="Тип продукции:" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
                <ComboBox SelectedItem="{Binding TypeProduct}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="ID"
                          Width="200" Padding="5"
                          x:Name="ProdTypeCBox"/>
            </WrapPanel>
            <WrapPanel Margin="0,5">
                <TextBlock Text="Количество персонала:" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
                <TextBox Name="empTB" Text="{Binding Count_Employee}" Width="200" Padding="5"></TextBox>
            </WrapPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10" VerticalAlignment="Top">
            <WrapPanel Margin="0,5">
            <TextBlock Text="Номер цеха:" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
            <TextBox Name="depTB" Text="{Binding Departament}" Width="200" Padding="5"/>
            </WrapPanel>
            <WrapPanel Margin="0,5">
                <TextBlock Text="Мин.цена (для агента):" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
                <TextBox Name="mpTB" Text="{Binding Min_Price_For_Agent, StringFormat={}{0:0.00}}" Width="200" Padding="5"/>
            </WrapPanel>
            <WrapPanel Margin="0,10">
                <TextBlock Text="Описание:" Width="180" FontSize="20" FontWeight="SemiBold" FontFamily="Gabriola"/>
                <TextBox Text="{Binding Description}" Height="74" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>
            </WrapPanel>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Выбор материалов для изготовления продуктов" FontFamily="Gabriola" FontSize="24" FontWeight="Bold" Margin="0,5" HorizontalAlignment="Left"/>
            <Border BorderBrush="#CEFFF9" BorderThickness="3" Background="White" VerticalAlignment="Center" Margin="0,10" CornerRadius="20" Padding="5">
                <Image Width="300" Height="200" Stretch="Uniform" x:Name="ImageProduct"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0, 10" VerticalAlignment="Top">
            <TextBlock Text="Выбор материалов для изготовления продуктов" FontFamily="Gabriola" FontSize="24" FontWeight="Bold" Margin="0,0,0,0" HorizontalAlignment="Left"/>
            <DataGrid x:Name="MaterialsDataGrid" AutoGenerateColumns="False" Height="170" BorderBrush="Gray" BorderThickness="1" Margin="0, 10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование" Width="2*" Binding="{Binding Material.Name}"/>
                    <DataGridTextColumn Header="Количество" Width="1*" Binding="{Binding Count_Mat_Fot_One}"/>
                    <DataGridTemplateColumn Header="Действия" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="-" Click="RemoveMaterial_Click" Background="#00CC76" Foreground="White"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <WrapPanel Margin="0,10" HorizontalAlignment="Center">
                <ComboBox x:Name="MaterialsComboBox" Width="200" IsEditable="True" DisplayMemberPath="Name"/>
                <TextBox x:Name="MaterialCountTextBox" Width="80" Margin="5,0"/>
                <Button Content="+" Click="AddMaterial_Click" Padding="5,0"/>
            </WrapPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="40" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button Content="Сохранить" Margin="5" Width="80" Background="#CEFFF9" Foreground="Black" FontSize="14" BorderThickness="0" x:Name="SaveBtn" Click="SaveBtn_Click"/>
            <Button Content="Загрузить фото" Background="#CEFFF9" Margin="5" Foreground="Black" FontSize="14" BorderThickness="0" Width="110" x:Name="DownloadImageBtn" Click="DownloadImageBtn_Click"/>
            <Button Content="Удалить" Width="80" Background="#CEFFF9" Margin="5" BorderThickness="0" Foreground="Black" FontSize="14" x:Name="Delete" Click="Delete_Click"/>
            <Button Content="Назад" Background="#CEFFF9" Margin="5" Foreground="Black" BorderThickness="0" FontSize="14" x:Name="Back" BorderBrush="Black" Width="80" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
